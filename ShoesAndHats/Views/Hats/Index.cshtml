@model IEnumerable<ShoesAndHats.Models.Hats>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (TempData["UpdateMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["UpdateMessage"]
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["UpdateMessage"]
    </div>
}

<p>
    <a asp-action="CreateHat" class="btn btn-primary">הוספת כובע</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelitem => item.Url)" />
                </td>
            <td>
                @Html.ActionLink("עריכה", "EditHat", new { id = item.Id }, new{ @class = "btn btn-primary" })
                    @Html.ActionLink("פרטים", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("מחיקה", "DeleteHat", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
